#!/bin/bash
dataset="cocostuff27"
# train_gpu="0,1,2,3"
train_gpu="4,5,6,7"
epoch=2
test_gpu="${train_gpu:0}"
ckpt="checkpoint/dino_vit_base_16.pth"
port=$(($RANDOM%100+1200))


# CNN
python train_front_door.py --dataset $dataset --ckpt $ckpt --gpu $train_gpu --port $port && python fine_tuning.py --dataset $dataset --epoch $epoch --ckpt $ckpt --gpu $train_gpu --port $port && python test.py --dataset $dataset --ckpt $ckpt --gpu $test_gpu

# DETR
# python train_front_door2.py --dataset $dataset --ckpt $ckpt --gpu $train_gpu --port $port && python fine_tuning2.py --epoch $epoch --dataset $dataset --ckpt $ckpt --gpu $train_gpu --port $port && python test2.py --dataset $dataset --ckpt $ckpt --gpu $test_gpu

# only test
# python test.py --dataset $dataset --ckpt $ckpt --gpu $test_gpu
# python test2.py --dataset $dataset --ckpt $ckpt --gpu $test_gpu